<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.leapsy.player4b.activities.MainActivity">

    <!-- 主選單 layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 最近 影片 音樂 layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contain_recently_video_audio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="@dimen/dp_30"
            android:visibility="gone">

            <com.leapsy.discretescrollviewlib.DiscreteScrollView
                android:id="@+id/all_files_media_discrete_scroll_view"
                android:layout_width="@dimen/dp_370"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_0"
                android:layout_marginStart="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/scroll_left_image_button"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_79"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                android:layout_marginStart="@dimen/dp_77"
                android:background="@color/zero"
                android:src="@drawable/ugly_scroll_left_selector"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/scroll_right_image_button"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_79"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                android:layout_marginEnd="@dimen/dp_77"
                android:background="@color/zero"
                android:src="@drawable/ugly_scroll_right_selector"
                android:scaleType="fitCenter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 檔案 路徑 -->
        <TextView
            android:id="@+id/root_folder_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="@dimen/dp_m_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:fontFamily="@font/noto_bold"
            android:text="@string/browse_root"/>

        <!-- 只包含 檔案瀏覽 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contain_browse_layout"
            android:layout_width="@dimen/dp_452"
            android:layout_height="@dimen/dp_192"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_38"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            android:visibility="visible">

            <!-- 只包含 檔案瀏覽 RecyclerView -->
            <!-- com.leapsy.player4b.CustomThumbSizeRecyclerView app:thumbLength="@dimen/dp_50" -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/browse_all_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scrollbars="vertical"
                style="@style/my_scrollbar_style"/>

            <!-- 向上捲 向下捲 layout -->
            <LinearLayout
                android:layout_width="@dimen/dp_16"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/browse_all_recycler_view"
                android:layout_marginEnd="@dimen/dp_0">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16">
                    <ImageView
                        android:id="@+id/scroll_up_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/scroll_up_button_background_enable_layer_list"/>

                    <ImageView
                        android:id="@+id/scroll_up_hovered_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/img_scroll_hover_96px"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/scroll_up_image_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/zero"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_152">

                    <ImageView
                        android:id="@+id/scroll_down_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_16"
                        android:background="@drawable/scroll_down_button_background_enable_layer_list"/>

                    <ImageView
                        android:id="@+id/scroll_down_hovered_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/img_scroll_hover_96px"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/scroll_down_image_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/zero"/>

                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- no recently or video or music layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/no_any_file_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- just back -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/zero"
                android:clickable="true" />

            <ImageView
                android:id="@+id/no_any_file_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                android:background="@drawable/ic_img_play_empty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/no_any_file_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_recently"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/no_any_file_image_view"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView" />

            <TextView
                android:id="@+id/no_any_file_subtitle_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_can_open_permission_in_settings"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/no_any_file_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 中間被focus的 highlight 效果 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/high_light_frame_layout"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_158"
            android:layout_marginEnd="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 中間被focus的 highlight 效果 -->
            <ImageView
                android:id="@+id/high_light_frame_image_view"
                android:layout_width="@dimen/dp_143"
                android:layout_height="@dimen/dp_143"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@mipmap/img_media_focused" />

            <!-- 中間被focus的 時間 -->
            <TextView
                android:id="@+id/focused_media_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/high_light_frame_image_view"
                android:layout_marginTop="@dimen/dp_0"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"/>

            <!-- 左側 mask 效果 -->
            <ImageView
                android:layout_width="@dimen/dp_79"
                android:layout_height="@dimen/dp_79"
                app:layout_constraintEnd_toStartOf="@+id/high_light_frame_image_view"
                android:layout_marginEnd="@dimen/dp_22"
                app:layout_constraintTop_toTopOf="@+id/high_light_frame_image_view"
                app:layout_constraintBottom_toBottomOf="@+id/high_light_frame_image_view"
                android:background="@drawable/mask_shape"
                android:clickable="true"
                android:focusable="false"/>

            <!-- 右側 mask 效果 -->
            <ImageView
                android:layout_width="@dimen/dp_79"
                android:layout_height="@dimen/dp_79"
                app:layout_constraintStart_toEndOf="@+id/high_light_frame_image_view"
                android:layout_marginStart="@dimen/dp_22"
                app:layout_constraintTop_toTopOf="@+id/high_light_frame_image_view"
                app:layout_constraintBottom_toBottomOf="@+id/high_light_frame_image_view"
                android:background="@drawable/mask_shape"
                android:clickable="true"
                android:focusable="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 上面四個切換按鈕 layout -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/dp_416"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_42"
            android:background="@drawable/tab_background_shape"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 最近 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- 最近 selected high light -->
                <ImageView
                    android:id="@+id/recently_selected_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/switch_button_selected_shape" />

                <!-- 最近 hovered high light -->
                <ImageView
                    android:id="@+id/recently_hovered_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_media_tabs_hover"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:background="@drawable/ic_tabs_recent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:fontFamily="@font/noto_bold"
                        android:text="@string/recently"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

                <Button
                    android:id="@+id/switch_recently_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"
                    android:focusable="false" />
            </RelativeLayout>

            <!-- 影片 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- 影片 selected high light -->
                <ImageView
                    android:id="@+id/video_selected_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/switch_button_selected_shape"
                    android:visibility="gone" />

                <!-- 影片 hovered high light -->
                <ImageView
                    android:id="@+id/video_hovered_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_media_tabs_hover"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:background="@drawable/ic_tabs_video" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:fontFamily="@font/noto_bold"
                        android:text="@string/video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

                <Button
                    android:id="@+id/switch_video_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"
                    android:focusable="false" />
            </RelativeLayout>

            <!-- 音樂 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- 音樂 selected high light -->
                <ImageView
                    android:id="@+id/music_selected_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/switch_button_selected_shape"
                    android:visibility="gone" />

                <!-- 音樂 hovered high light -->
                <ImageView
                    android:id="@+id/music_hovered_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_media_tabs_hover"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:background="@drawable/ic_tabs_audio" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:fontFamily="@font/noto_bold"
                        android:text="@string/audio"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />
                </LinearLayout>

                <Button
                    android:id="@+id/switch_music_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"
                    android:focusable="false" />
            </RelativeLayout>

            <!-- 檔案 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- 檔案 selected high light -->
                <ImageView
                    android:id="@+id/browser_selected_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/switch_button_selected_shape"
                    android:visibility="gone" />

                <!-- 檔案 hovered high light -->
                <ImageView
                    android:id="@+id/browser_hovered_high_light_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_media_tabs_hover"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:background="@drawable/ic_tabs_browse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:fontFamily="@font/noto_bold"
                        android:text="@string/browse"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />
                </LinearLayout>

                <Button
                    android:id="@+id/switch_all_files_media_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"
                    android:focusable="false" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- 全螢幕播放 layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/full_screen_media_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- just back -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:clickable="true"
            android:focusable="false"/>
        <!-- IJK Player Container layout -->
        <FrameLayout
            android:id="@+id/video_view_container_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- 假如播放的是音樂 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/if_current_media_is_audio_layout"
            android:layout_width="@dimen/dp_133"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible">
            <View
                android:id="@+id/if_current_media_is_audio_back_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_133"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/tab_background_shape"/>
            <ImageView
                android:id="@+id/if_current_media_is_audio_image_view"
                android:layout_width="@dimen/dp_85"
                android:layout_height="@dimen/dp_85"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/ic_icon_muise"/>
            <TextView
                android:id="@+id/current_played_music_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/if_current_media_is_audio_image_view"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/current_played_music_timing_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/if_current_media_is_audio_back_view"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@font/roboto_bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 下方控制器 layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_controller_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <!-- 左上 影片片名 layout -->
            <FrameLayout
                android:id="@+id/current_played_video_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_33"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_10">
                <ImageView
                    android:id="@+id/current_played_video_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_media_tabs_hover"
                    android:visibility="gone"/>
                <!-- 左上 影片片名 -->
                <TextView
                    android:id="@+id/current_played_video_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/noto_bold"/>
            </FrameLayout>
            <!-- 當使用者直接拖拉seekbar時出現文字 -->
            <TextView
                android:id="@+id/pop_display_current_played_media_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_66"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:visibility="visible"/>
            <!-- play pause button layout -->
            <FrameLayout
                android:id="@+id/play_pause_button_layout"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/play_pause_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/play_pause_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pause_button_layer_list"/>
                <Button
                    android:id="@+id/play_pause_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
            </FrameLayout>
            <!-- rewind button layout -->
            <FrameLayout
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="@id/play_pause_button_layout"
                app:layout_constraintEnd_toStartOf="@+id/play_pause_button_layout"
                android:layout_marginEnd="@dimen/dp_21">
                <ImageView
                    android:id="@+id/rewind_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/rewind_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rewind_button_layer_list"/>
                <Button
                    android:id="@+id/rewind_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
            </FrameLayout>
            <!-- forward button layout -->
            <FrameLayout
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="@id/play_pause_button_layout"
                app:layout_constraintStart_toEndOf="@+id/play_pause_button_layout"
                android:layout_marginStart="@dimen/dp_21">
                <ImageView
                    android:id="@+id/forward_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/forward_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/forward_button_layer_list"/>
                <Button
                    android:id="@+id/forward_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
            </FrameLayout>
            <!-- adjust volume button layout -->
            <FrameLayout
                android:id="@+id/adjust_volume_button_layout"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="@id/play_pause_button_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_32">
                <ImageView
                    android:id="@+id/adjust_volume_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/adjust_volume_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_btn_volume_up"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:background="@drawable/volume_adjust_background_default_shape"/>
                <Button
                    android:id="@+id/adjust_volume_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
            </FrameLayout>
            <!-- adjust volume seekbar layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/adjust_volume_seekbar_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/adjust_volume_button_layout"
                app:layout_constraintBottom_toBottomOf="@+id/adjust_volume_button_layout"
                app:layout_constraintStart_toEndOf="@+id/adjust_volume_button_layout"
                android:layout_marginStart="@dimen/dp_5"
                android:visibility="gone">
                <!-- 音量 seek bar  -->
                <SeekBar
                    android:id="@+id/volume_seek_bar"
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:progressDrawable="@drawable/rounded_corner_porgress_bar_layer_list"
                    android:thumb="@color/zero"
                    android:progress="36"/>
                <!-- 顯示現在音量值-->
                <TextView
                    android:id="@+id/current_volume_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/volume_seek_bar"
                    android:layout_marginStart="@dimen/dp_5"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:text="60"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- switch 2d / 3d button layout -->
            <FrameLayout
                android:id="@+id/switch_2d3d_button_layout"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="@id/play_pause_button_layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dp_32">
                <ImageView
                    android:id="@+id/switch_2d3d_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/switch_2d3d_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_btn_2d_view"/>
                <Button
                    android:id="@+id/switch_2d3d_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
                <ImageView
                    android:id="@+id/forbid_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/forbidden"
                    android:focusable="false"
                    android:clickable="true"/>
            </FrameLayout>
            <!-- seekbar & current time / total time layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/play_pause_button_layout"
                android:layout_marginTop="@dimen/dp_5">
                <!-- 影片的進度條  -->
                <SeekBar
                    android:id="@+id/video_seek_bar"
                    android:layout_width="@dimen/dp_309"
                    android:layout_height="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:progressDrawable="@drawable/rounded_corner_porgress_bar_layer_list"
                    android:thumb="@color/zero"/>
                <!-- 目前播放時間點 -->
                <TextView
                    android:id="@+id/current_played_media_timing_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/video_seek_bar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"/>
                <!-- 目前播放的媒體總長 -->
                <TextView
                    android:id="@+id/current_played_media_total_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_11"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/video_seek_bar"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- show or hide 下方控制器 layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/show_hide_video_controller_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/show_hide_video_controller_0_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_100"
                android:background="@color/zero"
                android:clickable="true"
                android:focusable="false"/>
            <ImageView
                android:id="@+id/show_hide_video_controller_1_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zero"
                android:clickable="true"
                android:focusable="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- lock layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/full_screen_lock_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/full_screen_lock_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/zero"
                android:clickable="true"
                android:focusable="false"
                android:visibility="gone"/>

            <!-- lock button layout -->
            <FrameLayout
                android:id="@+id/lock_button_layout"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_32">
                <ImageView
                    android:id="@+id/lock_hovered_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_scroll_hover_96px"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/lock_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/unlock_layer_list"/>
                <Button
                    android:id="@+id/lock_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zero"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>