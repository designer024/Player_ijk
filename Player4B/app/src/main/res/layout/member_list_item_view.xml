<?xml version="1.0" encoding="utf-8"?>
<!-- dp_72 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_416"
    android:layout_height="@dimen/dp_56"
    android:background="@drawable/browser_list_shape">

    <!-- icon -->
    <ImageView
        android:id="@+id/list_icon_image_view"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/zero"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/list_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="資料夾名稱"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_icon_image_view"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_arrow_image_view"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_26"
        android:background="@drawable/ic_icon_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_arrow_image_view"
        android:layout_marginEnd="@dimen/dp_26"/>

    <!-- hovered high light -->
    <ImageView
        android:id="@+id/list_hovered_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_media_list_hover"
        android:visibility="gone"/>

    <Button
        android:id="@+id/select_this_item_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zero"/>

</androidx.constraintlayout.widget.ConstraintLayout>